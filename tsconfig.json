{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "plugins/*/client.ts",
    "plugins/*/components/*.ts",
    "vuepress.client.ts",
    "**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@plugins/*": [
        "./plugins/*"
      ],
    },
    "types": [
      "vite/client"
    ],
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
