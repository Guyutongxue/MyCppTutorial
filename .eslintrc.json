{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "only-warn"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "eqeqeq": [
      "warn",
      "always"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-constant-condition": [
      "warn",
      {
        "checkLoops": false
      }
    ]
  },
  "globals": {
    "window": true,
    "document": true
  }
}
